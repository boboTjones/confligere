  %li
    %a{:href => "#", "data-toggle" => "tab", :onclick => "dothat('expectations'); return false"} Expectations
  %li
    %a{:href => "#", "data-toggle" => "tab", :onclick => "dothat('affiliations'); return false"} Relationships
